<h2><%= @fan.name %>'s Profile</h2>

<ul>
  <li>Balance: $<%= @fan.balance %></li>
  <li>Age: <%= @fan.age %></li>
  <li>Favorite Artist: <%= @fan.favorite_artist %></li>
</ul>

<h3><%= @fan.name %>'s Tickets</h3>

<% @fan.tickets.each do |ticket| %>
  ------------<br>
  <%= ticket.concert.artist_name %><br>
  $<%= ticket.concert.price %><br>
  <%= ticket.concert.venue_name %><br>
  <%= ticket.concert.venue_capacity %><br>

  <%=
  button_to "Delete Ticket",
  ticket_path(ticket),
  method: :delete,
  data: {confirm: "Are you sure?"}
   %>

<% end %>

<br><br>

<%= link_to "Back to concerts", concerts_path %>

<br><br>

<%= button_to "Edit Profile", edit_fan_path(@fan), { method: :get} %>

<br><br>

<%= button_to("Remove Profile", fan_path(@fan), { method: :delete }) %>
